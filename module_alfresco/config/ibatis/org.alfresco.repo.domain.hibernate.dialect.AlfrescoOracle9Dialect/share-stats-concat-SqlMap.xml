<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="alfresco.atolcd.audit">
  <sql id="select_concat_actions">
    select
      audit_app_name || '.' || audit_action_name as audit_target, count(*) as audit_count
    from
      share_stats_audit_entry
  </sql>
  
  <sql id="group_by_concat">
    group by audit_app_name || '.' || audit_action_name
  </sql>
</sqlMap>